<p id="notice"><%= notice %></p>

<h1>Listing Movements</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Description</th>
      <th>User</th>
      <th>Category</th>
      <th>Account</th>
      <th>Date</th>
      <th>Value</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movements.each do |movement| %>
      <tr>
        <td><%= movement.description %></td>
        <td><%= movement.user_id %></td>
        <td><%= movement.category_id %></td>
        <td><%= movement.account_id %></td>
        <td><%= movement.date %></td>
        <td><%= movement.value %></td>
        <td><%= link_to 'Show', movement %></td>
        <td><%= link_to 'Edit', edit_movement_path(movement) %></td>
        <td><%= link_to 'Destroy', movement, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

