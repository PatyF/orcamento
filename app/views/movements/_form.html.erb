<%= form_for(@movement) do |f| %>
  <% if @movement.errors.any? %>
    <% @movement.errors.full_messages.each do |message| %>
      <div class="alert alert-danger" role="alert"><%=message%></div>
    <% end %>
  <% end %>

  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_field :description, class: "form-control"  %>
  </div>
  <div class="field">
    <%= f.label :category_id %><br>
    <%= f.collection_select :category_id, @categories, :id, :description, {}, class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label :account_id %><br>
    <%= f.collection_select :account_id, @accounts, :id, :description, {}, class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label :kind %><br>
    <%= f.radio_button :kind, 'receita' %>Receita
    <%= f.radio_button :kind, 'despesa' %>Despesa
  </div>
  <div class="field">
    <%= f.label :date %><br>
    <%= f.date_select :date %>
  </div>
  <div class="field">
    <%= f.label :value %><br>
    <%= f.text_field :value, class: "form-control"  %>
  </div>
  <div class="actions">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>
