<p id="notice"><%= notice %></p>

<h1>Report Movements</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Description</th>
      <th>Category</th>
      <th>Account</th>
      <th>Date</th>
      <th>Value</th>
      <th>Kind</th>
    </tr>
  </thead>

  <tbody>
    <% @movements.each do |movement| %>
      <tr>
        <td><%= movement.description %></td>
        <td><%= view_category movement.category_id %></td>
        <td><%= view_account movement.account_id %></td>
        <td><%= view_date movement.date %></td>
        <td><%= view_value movement.value %></td>
        <td><%= movement.kind %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
