<%= form_for(@budget) do |f| %>
  <% if @budget.errors.any? %>
    <% @budget.errors.full_messages.each do |message| %>
      <div class="alert alert-danger" role="alert"><%=message%></div>
    <% end %>
  <% end %>

  <div class="field">
    <%= f.label :revenue %><br>
    <%= f.text_field :revenue, class: "form-control"  %>
  </div>
  <div class="field">
    <%= f.label :expense %><br>
    <%= f.text_field :expense, class: "form-control"  %>
  </div>
  <div class="field">
    <%= f.label :date %><br>
    <%= f.date_select :date, class: "form-control"  %>
  </div>
  <div class="actions">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>
